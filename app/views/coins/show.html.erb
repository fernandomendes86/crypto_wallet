<p id="notice"><%= notice %></p>

<form>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.description, class: "form-control", disabled: "true" %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class: "form-control", disabled: "true" %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:url_image) %>
    <%= text_field_tag nil, @coin.url_image, class: "form-control", disabled: "true"  %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type) %>
    <%= text_field_tag nil, @coin.mining_type.description, class: "form-control", disabled: "true" %>
  </div>

</form>

<%= form_tag(salvar_mining_types_path(id: @coin.id)) do %>

  <%= link_to t('links.edit'), edit_coin_path(@coin), class: "btn btn-primary" %> |
  <%= link_to t('links.back'), coins_path, class: "btn btn-primary" %> |
  <%= link_to "+ Mudar Tipo", mostra_funcao_path(coin_id: @coin.id), :remote => true %>

  <span id = "div_id">
    
  </span>
<% end %>